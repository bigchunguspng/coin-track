<Window x:Class="CoinTrack.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinTrack.View"
        xmlns:vm="clr-namespace:CoinTrack.ViewModel"
        mc:Ignorable="d"
        Title="CoinTrack"
        CacheMode="BitmapCache"
        Width="1280"
        Height="720"
        MinWidth="960"
        MinHeight="720"
        Background="White">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="Numbers">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <Style TargetType="TextBlock" x:Key="Rank">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <Grid DockPanel.Dock="Top">
            <Button Command="{Binding FetchData}" Height="50" Width="150">Fetch data</Button>
        </Grid>

        <DockPanel MaxWidth="960" HorizontalAlignment="Center">

            <!--Headers-->
            <Grid DockPanel.Dock="Top" Margin="5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="95" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="Foreground" Value="#4a4a4a" />
                    </Style>
                </Grid.Resources>
                <TextBlock Grid.Column="0" Text="#" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="Coin" />
                <TextBlock Grid.Column="2" Text="Price" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Text="1h" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="4" Text="24h" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="5" Text="7d" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="6" Text="24h Volume" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="7" Text="Market Cap" HorizontalAlignment="Right" />
            </Grid>

            <!--Data-->
            <ListView ItemsSource="{Binding Coins}" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid MinWidth="900" Margin="0 5" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="280" />
                                <ColumnDefinition Width="95" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="140" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0" Text="{Binding Currency.Rank}"
                                Style="{StaticResource Rank}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Image
                                    Source="{Binding Currency.Image}"
                                    Width="20" Height="20" Margin="0 0 8 0"
                                    RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock
                                    Text="{Binding Currency.Name}"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold" FontSize="14" />
                                <TextBlock
                                    Text="{Binding Symbol}"
                                    VerticalAlignment="Center" Foreground="Gray" Padding="10 0" />
                            </StackPanel>
                            <TextBlock
                                Grid.Column="2" Text="{Binding Price}"
                                Style="{StaticResource Numbers}" />
                            <TextBlock
                                Grid.Column="3" Text="{Binding PriceChangePercentage1H}"
                                Style="{StaticResource Numbers}" />
                            <TextBlock
                                Grid.Column="4" Text="{Binding PriceChangePercentage24H}"
                                Style="{StaticResource Numbers}" />
                            <TextBlock
                                Grid.Column="5" Text="{Binding PriceChangePercentage7D}"
                                Style="{StaticResource Numbers}" />
                            <TextBlock
                                Grid.Column="6" Text="{Binding Volume24H}"
                                Style="{StaticResource Numbers}" />
                            <TextBlock
                                Grid.Column="7" Text="{Binding MarketCap}"
                                Style="{StaticResource Numbers}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </DockPanel>
    </DockPanel>
</Window>
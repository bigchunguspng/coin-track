<UserControl x:Class="CoinTrack.View.Tickers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CoinTrack.View"
             xmlns:vm="clr-namespace:CoinTrack.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <vm:TickersViewModel />
    </UserControl.DataContext>

    <DockPanel>
        <ListView ItemsSource="{Binding Tickers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Image
                            Width="28" Height="28"
                            Source="{Binding Market.Logo}" />
                        <TextBlock Text="{Binding Market.Name}" />
                        <TextBlock Text="{Binding LastPrice}" />
                        <TextBlock Text="{Binding Target}" />
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</UserControl>